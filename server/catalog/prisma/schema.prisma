generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String
  price      Float
  image      String?
  stock      Int       @default(0)
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId Int
}
