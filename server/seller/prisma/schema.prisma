generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Severity {
  low
  medium
  high
}

model Tax {
  id        Int      @id @default(autoincrement())
  region    String
  rate      Float    @default(0)
  createdAt DateTime @default(now())
}

model SecurityEvent {
  id       Int      @id @default(autoincrement())
  ts       DateTime
  ip       String
  vector   String
  severity Severity
}

model FinanceIncome {
  id       Int      @id @default(autoincrement())
  fecha    DateTime
  concepto String
  monto    Float
}

model FinanceExpense {
  id       Int      @id @default(autoincrement())
  fecha    DateTime
  concepto String
  monto    Float
}
