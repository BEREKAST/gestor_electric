generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x", "native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String         @id @default(cuid())
  name        String
  description String?
  price       Decimal        @db.Decimal(10,2)
  stock       Int            @default(0)
  categoryId  String?
  category    Category?      @relation(fields: [categoryId], references: [id])
  images      ProductImage[]

  sellerId    String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([sellerId])
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  productId String
  product   Product  @relation(fields: [productId], references: [id])

  @@index([productId])
}

// Impuestos y auditor√≠a
model SellerTax {
  id        String   @id @default(cuid())
  sellerId  String
  region    String
  rate      Float
  createdAt DateTime @default(now())
}

model AuditEvent {
  id        String   @id @default(cuid())
  sellerId  String
  ts        DateTime @default(now())
  actor     String
  action    String
  meta      String?
}
